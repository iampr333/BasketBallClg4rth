<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
            >

    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:layout_weight="0.5"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team A"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/teamASore"
            android:text="0"
            android:textSize="55sp"/>

         <Button
             android:layout_marginTop="30dp"
             android:textSize="15sp"
             android:layout_width="150dp"
             android:layout_height="50dp"
             android:text="+3 POINTS"
             android:onClick="threePointsA"
             />
        <Button
        android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
        android:text="+2 POINTS"
            android:onClick="twoPointsA"
        />
        <Button
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="FREE THROW"
            android:onClick="freeThrowA"
            />



    </LinearLayout>

    <View
        android:layout_marginTop="15dp"
        android:layout_width="1dp"
        android:layout_height="325dp"
        android:background="#6A686A"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/teamBSore"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="55sp"/>

        <Button
            android:layout_marginTop="30dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:text="+3 POINTS"
            android:onClick="threePointsB"
            />
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:text="+2 POINTS"
            android:onClick="twoPointsB"
            />
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:text="FREE THROW"
            android:onClick="freeThrowB"
            />


    </LinearLayout>

      </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:textSize="25sp"
            android:layout_marginBottom="100dp"
            android:onClick="reset"
            />

    </RelativeLayout>


</LinearLayout>